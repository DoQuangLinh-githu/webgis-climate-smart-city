<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebGIS - Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <style>
        :root {
            --primary-color: #007bff;
            --success-color: #28a745;
            --warning-color: #ffc107;
            --danger-color: #dc3545;
            --info-color: #17a2b8;
        }
        
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .main-container {
            min-height: 100vh;
            padding: 20px 0;
        }
        
        .sidebar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.18);
            height: fit-content;
            position: sticky;
            top: 20px;
            animation: slideInLeft 0.5s ease-in-out;
        }
        
        .nav-link {
            color: #495057;
            padding: 12px 20px;
            border-radius: 10px;
            margin: 5px 10px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 500;
        }
        
        .nav-link:hover, .nav-link.active {
            background: linear-gradient(45deg, var(--primary-color), #0056b3);
            color: white;
            transform: translateX(5px) scale(1.02);
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
        }
        
        .main-content {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.18);
            padding: 30px;
            margin-bottom: 20px;
            animation: fadeIn 0.5s ease-in-out;
        }
        
        .field-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-left: 4px solid var(--primary-color);
            margin-bottom: 20px;
            transition: transform 0.2s ease;
        }
        
        .field-card:hover {
            transform: translateY(-2px);
        }
        
        .field-header {
            background: linear-gradient(45deg, var(--primary-color), #0056b3);
            color: white;
            padding: 15px 20px;
            border-radius: 8px 8px 0 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .indicator-item {
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            transition: all 0.3s ease;
        }
        
        .indicator-item:hover {
            border-color: var(--primary-color);
            box-shadow: 0 2px 10px rgba(0, 123, 255, 0.15);
        }
        
        .form-floating {
            margin-bottom: 15px;
        }
        
        .btn-primary {
            background: linear-gradient(45deg, var(--primary-color), #0056b3);
            border: none;
            border-radius: 25px;
            padding: 10px 25px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 123, 255, 0.4);
        }
        
        .level-badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: bold;
        }
        
        .level-1 { background: #f8f9fa; color: #6c757d; }
        .level-2 { background: #fff3cd; color: #856404; }
        .level-3 { background: #d1ecf1; color: #0c5460; }
        .level-4 { background: #d4edda; color: #155724; }
        .level-5 { background: #cce5ff; color: #004085; }
        
        .alert {
            border-radius: 10px;
            border: none;
            padding: 15px 20px;
            animation: fadeIn 0.5s ease-in-out;
        }
        
        .district-select {
            background: linear-gradient(45deg, #f8f9fa, #e9ecef);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            border: 2px dashed #dee2e6;
        }
        
        .progress {
            height: 8px;
            border-radius: 10px;
            margin-top: 5px;
        }
        
        #map { height: 400px; border-radius: 10px; }
        
        @media (max-width: 768px) {
            .main-content {
                padding: 15px;
                margin: 10px;
            }
            
            .field-header h5 {
                font-size: 1.1rem;
            }
            
            .sidebar {
                margin-bottom: 20px;
                position: relative;
                top: 0;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid main-container">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
        <div class="position-sticky pt-3">
          <h4 class="text-center">WebGIS</h4>
          <h5 class="text-center">Climate Smart City</h5>
          <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link" href="/dashboard"><i class="fas fa-home"></i> Dashboard</a></li>
            <li class="nav-item"><a class="nav-link" href="/cndl"><i class="fas fa-upload"></i> Cập Nhật Dữ Liệu</a></li>
            <% if (user && user.role === 'admin') { %>
            <li class="nav-item"><a class="nav-link" href="/qldl"><i class="fas fa-table"></i> Quản Lý Dữ Liệu</a></li>
            <li class="nav-item"><a class="nav-link" href="/lichsu"><i class="fas fa-history"></i> Lịch Sử</a></li>
            <li class="nav-item"><a class="nav-link" href="/doimatkhau"><i class="fas fa-key"></i> Đổi Mật Khẩu</a></li>
            <li class="nav-item"><a class="nav-link" href="/hsnd"><i class="fas fa-user"></i> Hồ Sơ</a></li>
            <li class="nav-item"><a class="nav-link active" href="/total-score"><i class="fas fa-calculator"></i> Tổng Điểm</a></li>
            <% } %>
            <li class="nav-item"><a class="nav-link" href="/xbtk"><i class="fas fa-file-export"></i> Xuất Báo Cáo</a></li>
            <li class="nav-item"><a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Đăng Xuất</a></li>
          </ul>
          <hr>
          <div class="text-center">
            <p>Người dùng: <strong><%= user ? user.username : 'Guest' %></strong></p>
            <% if (user && user.role === 'admin') { %>
              <span class="badge bg-primary">Quản trị</span>
            <% } else { %>
              <span class="badge bg-secondary">Người dùng</span>
            <% } %>
          </div>
        </div>
      </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Dashboard - TP. Hồ Chí Minh</h1>
                    <p>Tổng quan hệ thống đánh giá Climate Smart City</p>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger animate__animated animate__shakeX"><%= error %></div>
                <% } %>
                <% if (success) { %>
                    <div class="alert alert-success animate__animated animate__bounceIn"><%= success %></div>
                <% } %>

                <div class="row">
                    <div class="col-md-3">
                        <div class="field-card">
                            <div class="field-header">
                                <h5><i class="fas fa-chart-line"></i> Điểm Tổng Hợp</h5>
                            </div>
                            <div class="card-body">
                                <h3><%= totalScore || 0 %></h3>
                                <p>Điểm Tổng Hợp</p>
                                <p class="level-badge level-<%= overallLevel || 1 %>">Level <%= overallLevel || 1 %></p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="field-card">
                            <div class="field-header">
                                <h5><i class="fas fa-bolt"></i> Năng Lượng</h5>
                            </div>
                            <div class="card-body">
                                <h3><%= domainScores[1] || 0 %></h3>
                                <p>/ <%= domains.find(d => d.domain_id === 1)?.max_score || 100 %> điểm</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="field-card">
                            <div class="field-header">
                                <h5><i class="fas fa-city"></i> Quy Hoạch</h5>
                            </div>
                            <div class="card-body">
                                <h3><%= domainScores[2] || 0 %></h3>
                                <p>/ <%= domains.find(d => d.domain_id === 2)?.max_score || 100 %> điểm</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="field-card">
                            <div class="field-header">
                                <h5><i class="fas fa-bus"></i> Giao Thông</h5>
                            </div>
                            <div class="card-body">
                                <h3><%= domainScores[3] || 0 %></h3>
                                <p>/ <%= domains.find(d => d.domain_id === 3)?.max_score || 120 %> điểm</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="field-card">
                            <div class="field-header">
                                <h5><i class="fas fa-tint"></i> Quản Lý Nước</h5>
                            </div>
                            <div class="card-body">
                                <h3><%= domainScores[4] || 0 %></h3>
                                <p>/ <%= domains.find(d => d.domain_id === 4)?.max_score || 100 %> điểm</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="field-card">
                            <div class="field-header">
                                <h5><i class="fas fa-recycle"></i> Quản Lý Chất Thải</h5>
                            </div>
                            <div class="card-body">
                                <h3><%= domainScores[5] || 0 %></h3>
                                <p>/ <%= domains.find(d => d.domain_id === 5)?.max_score || 100 %> điểm</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- 
                <div class="row">
                    <div class="col-md-8">
                        <div class="field-card">
                            <div class="field-header">
                                <h5><i class="fas fa-map"></i> Bản Đồ GIS</h5>
                                <div>
                                    <button class="btn btn-sm btn-primary" onclick="fitMap()">Fit Map</button>
                                    <button class="btn btn-sm btn-primary" onclick="toggleHeatmap()">Heatmap</button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div id="map"></div>
                                <p class="text-center mt-2">Đang tải dữ liệu GIS...</p>
                            </div>
                        </div>
                    </div>
                    -->
                    <div class="col-md-4">
                        <div class="field-card">
                            <div class="field-header">
                                <h5><i class="fas fa-layer-group"></i> Chọn Lớp Dữ Liệu</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <button class="btn btn-sm btn-primary" onclick="enableAllLayers()">Bật Tất Cả</button>
                                    <button class="btn btn-sm btn-secondary" onclick="disableAllLayers()">Tắt Tất Cả</button>
                                </div>
                                <h6>Giao Thông</h6>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="roads">
                                    <label class="form-check-label" for="roads">Đường giao thông</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="aviation">
                                    <label class="form-check-label" for="aviation">Hàng không</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="trains">
                                    <label class="form-check-label" for="trains">Tàu</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="stations">
                                    <label class="form-check-label" for="stations">Ga</label>
                                </div>
                                <h6>Địa Lý</h6>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="rivers">
                                    <label class="form-check-label" for="rivers">Sông</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="province">
                                    <label class="form-check-label" for="province">Ranh giới tỉnh</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="ward">
                                    <label class="form-check-label" for="ward">Ranh giới Phường</label>
                                </div>
                                <h6>Điểm Nổi Bật</h6>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="shops">
                                    <label class="form-check-label" for="shops">Cửa hàng</label>
                                </div>
                                <hr>
                                <h6>Hành Động Nhanh</h6>
                                <a href="/cndl" class="btn btn-sm btn-primary mb-2"><i class="fas fa-upload"></i> Cập Nhật Dữ Liệu</a>
                                <% if (user && user.role === 'admin') { %>
                                    <a href="/qldl" class="btn btn-sm btn-primary mb-2"><i class="fas fa-table"></i> Quản Lý Dữ Liệu</a>
                                <% } %>
                                <a href="/xbtk" class="btn btn-sm btn-primary mb-2"><i class="fas fa-file-export"></i> Xuất Báo Cáo</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="field-card">
                    <div class="field-header">
                        <h5><i class="fas fa-table"></i> Dữ Liệu Chỉ Số TP. Hồ Chí Minh</h5>
                        <div>
                            <span>Tổng: <%= assessments.length %> Chỉ số</span>
                            <a href="/export/excel" class="btn btn-sm btn-primary"><i class="fas fa-file-excel"></i> Xuất Excel</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <% if (assessments && assessments.length > 0) { %>
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Lĩnh vực</th>
                                        <th>Chỉ số</th>
                                        <th>Giá trị</th>
                                        <th>Điểm</th>
                                        <th>Cấp độ</th>
                                        <th>Cập nhật</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% assessments.forEach(ass => { %>
                                        <tr>
                                            <td><%= domains.find(d => d.domain_id === ass.domain_id).name %></td>
                                            <td><%= indicators.find(i => i.indicator_id === ass.indicator_id).name %></td>
                                            <td><%= ass.value %></td>
                                            <td><%= ass.score_awarded %></td>
                                            <td><span class="level-badge level-<%= ass.level || 1 %>">Level <%= ass.level || 1 %></span></td>
                                            <td><%= new Date(ass.date).toLocaleDateString('vi-VN') %></td>
                                            <td>
                                                <a href="/sua_bdkh/<%= ass.assessment_id %>" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                                                <% if (user && user.role === 'admin') { %>
                                                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#detailModal" onclick="showDetail('<%= ass.assessment_id %>', '<%= domains.find(d => d.domain_id === ass.domain_id).name %>', '<%= indicators.find(i => i.indicator_id === ass.indicator_id).name %>', '<%= ass.value %>', '<%= ass.score_awarded %>', '<%= ass.level || 1 %>')"><i class="fas fa-info-circle"></i></button>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <div class="text-center">
                                <p>Chưa có dữ liệu</p>
                                <p>Vui lòng cập nhật dữ liệu đầu tiên</p>
                                <a href="/cndl" class="btn btn-primary"><i class="fas fa-upload"></i> Bắt đầu cập nhật</a>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Modal Chi Tiết -->
                <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="detailModalLabel">Chi Tiết Chỉ Số</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Lĩnh vực:</strong> <span id="modal-domain"></span></p>
                                        <p><strong>Chỉ số:</strong> <span id="modal-indicator"></span></p>
                                        <p><strong>Giá trị:</strong> <span id="modal-value"></span></p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Điểm:</strong> <span id="modal-score"></span></p>
                                        <p><strong>Cấp độ:</strong> <span id="modal-level" class="level-badge"></span></p>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                <a href="/cndl" class="btn btn-primary">Cập Nhật Dữ Liệu</a>
                                <% if (user && user.role === 'admin') { %>
                                    <button type="button" class="btn btn-danger" onclick="deleteIndicator()">Xóa Chỉ Số</button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
        let map, geojsonLayer;
        function initMap() {
            map = L.map('map').setView([10.7769, 106.7009], 11);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);
            <% if (geojson) { %>
                geojsonLayer = L.geoJSON(<%- JSON.stringify(geojson) %>, {
                    style: { color: '#007bff', weight: 2 },
                    onEachFeature: (feature, layer) => {
                        layer.bindPopup('TP. Hồ Chí Minh');
                    }
                }).addTo(map);
                map.fitBounds(geojsonLayer.getBounds());
            <% } %>
        }

        function fitMap() {
            if (geojsonLayer) map.fitBounds(geojsonLayer.getBounds());
        }

        function toggleHeatmap() {
            alert('Heatmap toggle not implemented');
        }

        function enableAllLayers() {
            document.querySelectorAll('.form-check-input').forEach(checkbox => checkbox.checked = true);
        }

        function disableAllLayers() {
            document.querySelectorAll('.form-check-input').forEach(checkbox => checkbox.checked = false);
        }

        function showDetail(id, domain, indicator, value, score, level) {
            document.getElementById('modal-domain').textContent = domain;
            document.getElementById('modal-indicator').textContent = indicator;
            document.getElementById('modal-value').textContent = value;
            document.getElementById('modal-score').textContent = score;
            document.getElementById('modal-level').textContent = `Level ${level}`;
            document.getElementById('modal-level').className = `level-badge level-${level}`;
        }

        function deleteIndicator() {
            alert('Delete indicator not implemented');
        }

        document.addEventListener('DOMContentLoaded', initMap);
    </script>
</body>
</html>