    <script>
        async function calculatePreview(indicatorCode) {
            const form = document.querySelector('form');
            const valueInput = form.querySelector(`input[name="${indicatorCode}[value_calculated]"]`);
            const value = valueInput.value;
            const params = {};
            form.querySelectorAll(`input[name^="${indicatorCode}[params]"]`).forEach(input => {
                const paramName = input.name.match(/\[params\]\[(.+)\]/)[1];
                params[paramName] = input.value;
            });

            try {
                const response = await fetch('/cndl/preview', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ indicator_code: indicatorCode, value, params })
                });
                const result = await response.json();
                if (result.error) {
                    alert('Lỗi: ' + result.error);
                    return;
                }
                alert(`Kết quả xem trước:\nGiá trị: ${result.calculatedValue}\nCấp độ: ${result.level}\nĐiểm: ${result.score}\nMô tả: ${result.description}`);
            } catch (err) {
                alert('Lỗi khi xem trước: ' + err.message);
            }
        }

        // Enable tooltips
        document.querySelectorAll('.tooltip-icon').forEach(el => {
            new bootstrap.Tooltip(el);
        });
